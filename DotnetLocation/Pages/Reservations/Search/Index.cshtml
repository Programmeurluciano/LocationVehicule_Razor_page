<div class="tables-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="card-style mb-30">
                <div class="card-header">
                    <h6 class="mb-1">Recherche de réservations</h6>
                    <p class="text-sm mb-0">
                        Recherchez des réservations par client, véhicule, statut...
                    </p>
                </div>

                <div class="card-body">
                    <!-- Formulaire de recherche -->
                    <form method="get" class="search-form mb-4">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label fw-500 text-muted mb-1">
                                    <i class="lni lni-search me-1"></i> Recherche
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0">
                                        <i class="lni lni-search-alt text-muted"></i>
                                    </span>
                                    <input type="text"
                                           name="SearchTerm"
                                           value="@Model.SearchTerm"
                                           class="form-control border-start-0"
                                           placeholder="Client / Véhicule..." />
                                </div>
                            </div>

                            <div class="col-md-2">
                                <label class="form-label fw-500 text-muted mb-1">
                                    <i class="lni lni-tag me-1"></i> Statut
                                </label>
                                <select name="Status" class="form-select">
                                    <option value="">Tous les statuts</option>
                                    <option value="Terminee" selected="@(Model.Status == "Terminee")">Terminée</option>
                                    <option value="Annulee" selected="@(Model.Status == "Annulee")">Annulée</option>
                                    <option value="EnCours" selected="@(Model.Status == "EnCours")">En cours</option>
                                </select>
                            </div>

                            <div class="col-md-2">
                                <label class="form-label fw-500 text-muted mb-1">
                                    <i class="lni lni-car me-1"></i> Catégorie
                                </label>
                                <select name="Categorie" class="form-select">
                                    <option value="">Toutes les catégories</option>
                                    @foreach (var item in Model.CategorieList)
                                    {
                                        <option value="@item.Nom" selected="@(Model.Categorie == item.Nom)">
                                            @item.Nom
                                        </option>
                                    }
                                </select>
                            </div>

                            <div class="col-md-2">
                                <label class="form-label fw-500 text-muted mb-1">
                                    <i class="lni lni-calendar me-1"></i> Date début
                                </label>
                                <input type="date"
                                       name="DateDebut"
                                       value="@Model.DateDebut?.ToString("yyyy-MM-dd")"
                                       class="form-control" />
                            </div>

                            <div class="col-md-2">
                                <label class="form-label fw-500 text-muted mb-1">
                                    <i class="lni lni-calendar me-1"></i> Date fin
                                </label>
                                <input type="date"
                                       name="DateFin"
                                       value="@Model.DateFin?.ToString("yyyy-MM-dd")"
                                       class="form-control" />
                            </div>

                            <div class="col-12">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a href="?SearchTerm=&Status=&Categorie=&DateDebut=&DateFin=" class="main-btn light-btn">
                                        <i class="lni lni-close me-2"></i> Réinitialiser
                                    </a>
                                    <button type="submit" class="main-btn primary-btn">
                                        <i class="lni lni-search me-2"></i> Rechercher
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>

                    @if (!string.IsNullOrWhiteSpace(Model.SearchTerm) || !string.IsNullOrWhiteSpace(Model.Status) ||
                                        !string.IsNullOrWhiteSpace(Model.Categorie) || Model.DateDebut.HasValue || Model.DateFin.HasValue)
                    {
                        <!-- Résumé de la recherche -->
                        <div class="results-summary mb-4">
                            <div class="alert alert-light border-0 bg-light d-flex align-items-center">
                                <i class="lni lni-stats-up me-3 text-primary" style="font-size: 1.5rem;"></i>
                                <div>
                                    <strong>@Model.TotalResults</strong> réservation(s) trouvée(s)
                                    @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
                                    {
                                        <span>pour "<strong>@Model.SearchTerm</strong>"</span>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Table de résultats -->
                    <div class="table-wrapper table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Client</th>
                                    <th>Véhicule</th>
                                    <th>Catégorie</th>
                                    <th>Début</th>
                                    <th>Fin</th>
                                    <th>Statut</th>
                                    <th class="text-center" style="width: 100px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var r in Model.Reservations)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="client-avatar bg-primary-light me-2">
                                                    <i class="lni lni-user"></i>
                                                </div>
                                                <div>
                                                    <strong>@r.ClientNom @r.ClientPrenom</strong>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="vehicle-avatar bg-success-light me-2">
                                                    <i class="lni lni-car"></i>
                                                </div>
                                                <div>
                                                    <strong>@r.VehiculeMarque @r.VehiculeModel</strong>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@r.VehiculeCategorie</span>
                                        </td>
                                        <td>
                                            <i class="lni lni-calendar me-1 text-muted"></i>
                                            @r.DateDebut.ToShortDateString()
                                        </td>
                                        <td>
                                            <i class="lni lni-calendar me-1 text-muted"></i>
                                            @r.DateFin.ToShortDateString()
                                        </td>
                                        <td>
                                            @switch (r.Status)
                                            {
                                                case "Terminee":
                                                    <span class="badge bg-secondary">Terminée</span>
                                                    break;
                                                case "Annulee":
                                                    <span class="badge bg-danger">Annulée</span>
                                                    break;
                                                case "EnCours":
                                                    <span class="badge bg-primary">En cours</span>
                                                    break;
                                                case "Confirmée":
                                                    <span class="badge bg-success">Confirmée</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-warning">@r.Status</span>
                                                    break;
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="action-buttons">
                                                <a asp-page="/Reservations/Details"
                                                   asp-route-id="@r.Id"
                                                   class="action-btn view-btn"
                                                   title="Voir détails">
                                                    <i class="lni lni-eye"></i>
                                                </a>
                                                <a asp-page="/Reservations/Edit"
                                                   asp-route-id="@r.Id"
                                                   class="action-btn edit-btn"
                                                   title="Modifier">
                                                    <i class="lni lni-pencil"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                                @if (!Model.Reservations.Any())
                                {
                                    <tr>
                                        <td colspan="7" class="text-center py-5">
                                            <div class="empty-state">
                                                <div class="empty-state-icon">
                                                    <i class="lni lni-calendar"></i>
                                                </div>
                                                <h6 class="mt-3">Aucune réservation trouvée</h6>
                                                <p class="text-muted">
                                                    Aucune réservation ne correspond à vos critères de recherche
                                                </p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (Model.TotalResults > 0)
                    {
                        var totalPages = (int)Math.Ceiling((double)Model.TotalResults / Model.PageSize);

                        <div class="pagination-wrapper mt-4 d-flex justify-content-between align-items-center">
                            <div class="pagination-info text-muted">
                                Page @Model.PageNumber sur @totalPages
                                (@(((Model.PageNumber - 1) * Model.PageSize) + 1) -
                                @Math.Min(Model.PageNumber * Model.PageSize, Model.TotalResults)
                                sur @Model.TotalResults réservations)
                            </div>

                            <nav aria-label="Navigation des pages">
                                <ul class="pagination">
                                    <!-- Bouton Précédent -->
                                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                                        <a class="page-link"
                                           href="?SearchTerm=@Model.SearchTerm&Status=@Model.Status&Categorie=@Model.Categorie&DateDebut=@Model.DateDebut?.ToString("yyyy-MM-dd")&DateFin=@Model.DateFin?.ToString("yyyy-MM-dd")&Page=@(Model.PageNumber - 1)"
                                           aria-label="Précédent">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>

                                    <!-- Pages -->
                                    @{
                                        var startPage = Math.Max(1, Model.PageNumber - 2);
                                        var endPage = Math.Min(totalPages, startPage + 4);
                                        startPage = Math.Max(1, endPage - 4);
                                    }

                                    @if (startPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link"
                                               href="?SearchTerm=@Model.SearchTerm&Status=@Model.Status&Categorie=@Model.Categorie&DateDebut=@Model.DateDebut?.ToString("yyyy-MM-dd")&DateFin=@Model.DateFin?.ToString("yyyy-MM-dd")&Page=1">1</a>
                                        </li>
                                        @if (startPage > 2)
                                        {
                                            <li class="page-item disabled">
                                                <span class="page-link">...</span>
                                            </li>
                                        }
                                    }

                                    @for (int i = startPage; i <= endPage; i++)
                                    {
                                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                            <a class="page-link"
                                               href="?SearchTerm=@Model.SearchTerm&Status=@Model.Status&Categorie=@Model.Categorie&DateDebut=@Model.DateDebut?.ToString("yyyy-MM-dd")&DateFin=@Model.DateFin?.ToString("yyyy-MM-dd")&Page=@i">@i</a>
                                        </li>
                                    }

                                    @if (endPage < totalPages)
                                    {
                                        @if (endPage < totalPages - 1)
                                        {
                                            <li class="page-item disabled">
                                                <span class="page-link">...</span>
                                            </li>
                                        }
                                        <li class="page-item">
                                            <a class="page-link"
                                               href="?SearchTerm=@Model.SearchTerm&Status=@Model.Status&Categorie=@Model.Categorie&DateDebut=@Model.DateDebut?.ToString("yyyy-MM-dd")&DateFin=@Model.DateFin?.ToString("yyyy-MM-dd")&Page=@totalPages">@totalPages</a>
                                        </li>
                                    }

                                    <!-- Bouton Suivant -->
                                    <li class="page-item @(Model.PageNumber == totalPages ? "disabled" : "")">
                                        <a class="page-link"
                                           href="?SearchTerm=@Model.SearchTerm&Status=@Model.Status&Categorie=@Model.Categorie&DateDebut=@Model.DateDebut?.ToString("yyyy-MM-dd")&DateFin=@Model.DateFin?.ToString("yyyy-MM-dd")&Page=@(Model.PageNumber + 1)"
                                           aria-label="Suivant">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    }
                </div>
            </div>
            <!-- end card -->
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Validation des dates
            const dateDebut = document.querySelector('input[name="DateDebut"]');
            const dateFin = document.querySelector('input[name="DateFin"]');

            if (dateDebut && dateFin) {
                dateDebut.addEventListener('change', function() {
                    if (dateFin.value && this.value > dateFin.value) {
                        alert('La date de début ne peut pas être après la date de fin');
                        this.value = '';
                    }
                });

                dateFin.addEventListener('change', function() {
                    if (dateDebut.value && this.value < dateDebut.value) {
                        alert('La date de fin ne peut pas être avant la date de début');
                        this.value = '';
                    }
                });
            }

            // Auto-submit pour les filtres (optionnel)
            const filterSelects = document.querySelectorAll('select[name="Status"], select[name="Categorie"]');
            const searchForm = document.querySelector('.search-form');

            if (filterSelects.length > 0 && searchForm) {
                filterSelects.forEach(select => {
                    select.addEventListener('change', () => {
                        searchForm.submit();
                    });
                });
            }

            // Délai pour la recherche textuelle
            const searchInput = document.querySelector('input[name="SearchTerm"]');
            if (searchInput && searchForm) {
                let timeout = null;
                searchInput.addEventListener('keyup', function(e) {
                    clearTimeout(timeout);
                    timeout = setTimeout(() => {
                        if (this.value.length >= 2 || this.value.length === 0) {
                            searchForm.submit();
                        }
                    }, 500);
                });
            }
        });
    </script>
}

