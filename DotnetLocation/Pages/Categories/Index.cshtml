@page
@model DotnetLocation.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Categories";
}

<div class="title-wrapper pt-30">
    <div class="row align-items-center">
        <div class="col-md-6">
            <div class="title">
                <h2>Gestion Des Categories</h2>
            </div>
        </div>
        <!-- end col -->
        <div class="col-md-6">
            <div class="breadcrumb-wrapper">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/">
                                Tableau de bord
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Categories
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->
</div>
<!-- ========== title-wrapper end ========== -->
<!-- ========== tables-wrapper start ========== -->
<div class="tables-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="card-style mb-30">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="mb-0">Categories List</h6>
                    <a asp-page="Create" class="main-btn primary-btn btn-hover">
                        <i class="lni lni-plus me-2"></i> Nouveau
                    </a>
                </div>
                <p class="text-sm mb-20">
                    Gérez vos catégories de location. Ajoutez, modifiez ou supprimez des catégories selon vos besoins.
                </p>
                <div class="table-wrapper table-responsive">
                    <table class="table striped-table">
                        <thead>
                            <tr>
                                <th class="min-width">
                                    <h6>Catégorie</h6>
                                </th>
                                <th>
                                    <h6>Description</h6>
                                </th>
                                <th class="text-center">
                                    <h6>Actions</h6>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Categorie != null && Model.Categorie.Any())
                            {
                                @foreach (var item in Model.Categorie)
                                {
                                    <tr>
                                        <td class="min-width">
                                            <p>@Html.DisplayFor(modelItem => item.Nom)</p>
                                        </td>
                                        <td>
                                            <p class="text-truncate" style="max-width: 300px;">@Html.DisplayFor(modelItem => item.Description)</p>
                                        </td>
                                        <td>
                                            <div class="action d-flex justify-content-center">
                                                <a asp-page="./Edit" asp-route-id="@item.Id" class="text-primary me-3" title="Edit">
                                                    <i class="lni lni-pencil"></i>
                                                </a>
                                                <a asp-page="./Details" asp-route-id="@item.Id" class="text-info me-3" title="Details">
                                                    <i class="lni lni-eye"></i>
                                                </a>
                                                <a asp-page="./Delete" asp-route-id="@item.Id" class="text-danger" title="Delete">
                                                    <i class="lni lni-trash-can"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center py-4">
                                        <div class="empty-state">
                                            <svg width="64" height="64" viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg" class="mb-3">
                                                <path d="M32 2C15.432 2 2 15.432 2 32s13.432 30 30 30 30-13.432 30-30S48.568 2 32 2zm0 8c5.523 0 10 4.477 10 10s-4.477 10-10 10-10-4.477-10-10S26.477 10 32 10zm12 24.4c0 2.64-8.93 4-12 4-3.07 0-12-1.36-12-4v-4c0-2.64 8.93-4 12-4 3.07 0 12 1.36 12 4v4z" fill="#e0e0e0" />
                                            </svg>
                                            <h6 class="text-muted">No categories found</h6>
                                            <p class="text-sm text-muted">Start by creating your first category</p>
                                            <a asp-page="Create" class="main-btn primary-btn btn-hover mt-3">
                                                <i class="lni lni-plus me-2"></i> Create First Category
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.Categorie != null && Model.Categorie.Count() > 10)
                {
                    <div class="pagination-wrapper mt-4">
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                        <i class="lni lni-chevron-left"></i>
                                    </a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">
                                        <i class="lni lni-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
            </div>
            <!-- end card -->
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->
</div>
