@page
@model DotnetLocation.Pages.Clients.DetailsModel

@{
    ViewData["Title"] = "Détails du Client";
}

<div class="title-wrapper pt-30">
    <div class="row align-items-center">
        <div class="col-md-6">
            <div class="title">
                <h2>Détails du Client</h2>
            </div>
        </div>
        <!-- end col -->
        <div class="col-md-6">
            <div class="breadcrumb-wrapper">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/">
                                Tableau de bord
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-page="Index">
                                Clients
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Détails
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->
</div>
<!-- ========== title-wrapper end ========== -->

<div class="tables-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="card-style mb-30">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1">Informations personnelles</h6>
                        <p class="text-sm mb-0">
                            Client : <strong>@Model.Client?.Nom @Model.Client?.Prenom</strong>
                        </p>
                    </div>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-8">
                            <!-- Informations détaillées -->
                            <div class="info-card">
                                <h6 class="mb-3">Coordonnées du client</h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <dl class="row mb-0">
                                            <dt class="col-sm-5 fw-500 text-muted mb-2">
                                                <i class="lni lni-user me-1"></i> Nom
                                            </dt>
                                            <dd class="col-sm-7 mb-2">
                                                <div class="detail-value">
                                                    @Model.Client?.Nom
                                                </div>
                                            </dd>

                                            <dt class="col-sm-5 fw-500 text-muted mb-2">
                                                <i class="lni lni-user me-1"></i> Prénom
                                            </dt>
                                            <dd class="col-sm-7 mb-2">
                                                <div class="detail-value">
                                                    @Model.Client?.Prenom
                                                </div>
                                            </dd>
                                        </dl>
                                    </div>
                                    <div class="col-md-6">
                                        <dl class="row mb-0">
                                            <dt class="col-sm-5 fw-500 text-muted mb-2">
                                                <i class="lni lni-envelope me-1"></i> Email
                                            </dt>
                                            <dd class="col-sm-7 mb-2">
                                                <div class="detail-value">
                                                    <a href="mailto:@Model.Client?.Email">@Model.Client?.Email</a>
                                                </div>
                                            </dd>

                                            <dt class="col-sm-5 fw-500 text-muted mb-2">
                                                <i class="lni lni-phone me-1"></i> Contact
                                            </dt>
                                            <dd class="col-sm-7 mb-2">
                                                <div class="detail-value">
                                                    @if (!string.IsNullOrEmpty(Model.Client?.Contact))
                                                    {
                                                        <a href="tel:@Model.Client.Contact">@Model.Client.Contact</a>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">Non renseigné</span>
                                                    }
                                                </div>
                                            </dd>
                                        </dl>
                                    </div>
                                </div>
                            </div>

                            <!-- Actions rapides -->
                            @* <div class="info-card mt-4">
                                <h6 class="mb-3"><i class="lni lni-bolt me-2"></i> Actions rapides</h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <a href="mailto:@Model.Client?.Email" class="main-btn primary-btn-outline btn-hover w-100 mb-2">
                                            <i class="lni lni-envelope me-2"></i> Envoyer un email
                                        </a>
                                    </div>
                                    <div class="col-md-6">
                                        <a href="tel:@Model.Client?.Contact" class="main-btn success-btn-outline btn-hover w-100 mb-2">
                                            <i class="lni lni-phone me-2"></i> Appeler
                                        </a>
                                    </div>
                                </div>
                            </div> *@
                        </div>

                        <div class="col-lg-4">
                            <!-- Carte d'actions -->
                            <div class="card-style actions-card mb-4">
                                <h6 class="mb-3"><i class="lni lni-control-panel me-2"></i> Actions</h6>
                                <div class="d-grid gap-2">
                                    <a asp-page="./Edit" asp-route-id="@Model.Client?.Id" class="main-btn primary-btn btn-hover">
                                        <i class="lni lni-pencil me-2"></i> Modifier
                                    </a>

                                    <a asp-page="./Delete" asp-route-id="@Model.Client?.Id" class="main-btn danger-btn btn-hover">
                                        <i class="lni lni-trash-can me-2"></i> Supprimer
                                    </a>

                                    <a asp-page="Index" class="main-btn light-btn btn-hover">
                                        <i class="lni lni-arrow-left me-2"></i> Retour à la liste
                                    </a>
                                </div>
                            </div>

                            <!-- Informations rapides -->
                            <div class="card-style info-card">
                                <h6 class="mb-3">Informations rapides</h6>
                                <ul class="list-unstyled text-sm">
                                    <li class="mb-2 d-flex align-items-center">
                                        Client depuis : @DateTime.Now.ToString("dd/MM/yyyy")
                                    </li>
                                    <li class="mb-2 d-flex align-items-center">
                                        Email vérifié : <span class="badge bg-success ms-2">Oui</span>
                                    </li>
                                    <li class="d-flex align-items-center">
                                        Contact valide : <span class="badge bg-success ms-2">Oui</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!-- end card -->
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Copier l'email du client
            const copyEmail = (email) => {
                navigator.clipboard.writeText(email).then(() => {
                    alert('Email copié : ' + email);
                });
            };

            // Ajouter la fonction de copie sur l'email si nécessaire
            const emailElement = document.querySelector('a[href^="mailto:"]');
            if (emailElement) {
                emailElement.style.cursor = 'pointer';
                emailElement.title = 'Cliquer pour copier l\'email';
                emailElement.addEventListener('click', function(e) {
                    e.preventDefault();
                    copyEmail(this.textContent);
                });
            }

            // Copier le téléphone du client
            const copyPhone = (phone) => {
                navigator.clipboard.writeText(phone).then(() => {
                    alert('Numéro copié : ' + phone);
                });
            };

            // Ajouter la fonction de copie sur le téléphone
            const phoneElement = document.querySelector('a[href^="tel:"]');
            if (phoneElement) {
                phoneElement.style.cursor = 'pointer';
                phoneElement.title = 'Cliquer pour copier le numéro';
                phoneElement.addEventListener('click', function(e) {
                    e.preventDefault();
                    copyPhone(this.textContent);
                });
            }
        });
    </script>
}

