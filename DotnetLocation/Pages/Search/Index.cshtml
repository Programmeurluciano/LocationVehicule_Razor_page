<!-- ========== title-wrapper end ========== -->

<div class="tables-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="card-style mb-30">
                <div class="card-header">
                    <h6 class="mb-1">Recherche globale</h6>
                    <p class="text-sm mb-0">
                        Recherchez parmi tous les modules de l'application
                    </p>
                </div>

                <div class="card-body">
                    <!-- 🔍 Barre de recherche -->
                    <form method="get" class="mb-4">
                        <div class="search-wrapper">
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0">
                                    <i class="lni lni-search-alt text-muted"></i>
                                </span>
                                <input type="text"
                                       name="q"
                                       value="@Request.Query["q"]"
                                       class="form-control border-start-0"
                                       placeholder="Rechercher clients, véhicules, réservations..." />
                                <button class="main-btn primary-btn" type="submit">
                                    <i class="lni lni-search me-2"></i> Rechercher
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- 🏷️ Filtres -->
                    <div class="filter-tabs mb-4">
                        <div class="d-flex flex-wrap gap-2">
                            <button class="filter-btn active" data-filter="all">
                                <i class="lni lni-grid-alt me-1"></i> Tous
                            </button>
                            <a href="/clients/search?SearchTerm=@Request.Query["q"]" class="filter-btn">
                                <i class="lni lni-users me-1"></i> Clients
                            </a>
                            <a href="/vehicules/search?SearchTerm=@Request.Query["q"]" class="filter-btn">
                                <i class="lni lni-car me-1"></i> Véhicules
                            </a>
                            <a href="/categories/search?SearchTerm=@Request.Query["q"]" class="filter-btn">
                                <i class="lni lni-tag me-1"></i> Catégories
                            </a>
                            <a href="/reservations/search?SearchTerm=@Request.Query["q"]" class="filter-btn">
                                <i class="lni lni-calendar me-1"></i> Réservations
                            </a>
                        </div>
                    </div>

                    <!-- Statistiques des résultats -->
                    @if (!string.IsNullOrWhiteSpace(Request.Query["q"]))
                    {
                        var totalCount = Model.Clients.Count() + Model.Vehicules.Count() +
                        Model.Reservations.Count() + Model.Categories.Count();

                        <div class="results-stats mb-4">
                            <div class="alert alert-light border-0 bg-light">
                                <i class="lni lni-stats-up me-2 text-primary"></i>
                                <strong>@totalCount</strong> résultat(s) pour "<strong>@Request.Query["q"]</strong>"
                            </div>
                        </div>
                    }

                    <!-- 📊 Résultats -->
                    <div class="row g-4">

                        <!-- ================= CLIENTS ================= -->
                        @if (Model.Clients.Any())
                        {
                            <div class="col-12">
                                <div class="section-header d-flex align-items-center mb-3">
                                    <div class="section-icon bg-primary">
                                        <i class="lni lni-users text-white"></i>
                                    </div>
                                    <h5 class="section-title mb-0">
                                        Clients <span class="badge bg-primary ms-2">@Model.Clients.Count()</span>
                                    </h5>
                                </div>
                            </div>

                            @foreach (var c in Model.Clients)
                            {
                                <div class="col-md-6 col-lg-4">
                                    <div class="result-card">
                                        <div class="result-card-header">
                                            <div class="result-icon bg-primary-light">
                                                <i class="lni lni-user"></i>
                                            </div>
                                            <div class="result-info">
                                                <h6 class="result-title">
                                                    @c.Nom @c.Prenom
                                                </h6>
                                                <p class="result-subtitle">
                                                    @c.Email
                                                </p>
                                            </div>
                                        </div>
                                        <div class="result-card-body">
                                            <div class="result-meta">
                                                <span class="meta-item">
                                                    <i class="lni lni-phone me-1"></i> @c.Contact
                                                </span>
                                            </div>
                                        </div>
                                        <div class="result-card-footer">
                                            <a asp-page="/Clients/Details"
                                               asp-route-id="@c.Id"
                                               class="main-btn primary-btn-outline btn-sm w-100">
                                                <i class="lni lni-eye me-2"></i> Voir détails
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                        <!-- ================= VEHICULES ================= -->
                        @if (Model.Vehicules.Any())
                        {
                            <div class="col-12 mt-4">
                                <div class="section-header d-flex align-items-center mb-3">
                                    <div class="section-icon bg-success">
                                        <i class="lni lni-car text-white"></i>
                                    </div>
                                    <h5 class="section-title mb-0">
                                        Véhicules <span class="badge bg-success ms-2">@Model.Vehicules.Count()</span>
                                    </h5>
                                </div>
                            </div>

                            @foreach (var v in Model.Vehicules)
                            {
                                <div class="col-md-6 col-lg-4">
                                    <div class="result-card">
                                        <div class="result-card-header">
                                            <div class="result-icon bg-success-light">
                                                <i class="lni lni-car"></i>
                                            </div>
                                            <div class="result-info">
                                                <h6 class="result-title">
                                                    @v.Vehicule_Data.Marque @v.Vehicule_Data.Model
                                                </h6>
                                                <p class="result-subtitle">
                                                    @v.Vehicule_Data.Annee
                                                </p>
                                            </div>
                                        </div>
                                        <div class="result-card-body">
                                            <div class="result-meta">
                                                <span class="meta-item">
                                                    <i class="lni lni-tag me-1"></i> @v.Vehicule_Data.CategorieNom
                                                </span>
                                                <span class="meta-item">
                                                    <i class="lni lni-money-protection me-1"></i> @v.Vehicule_Data.Prix.ToString("N0") Ar/jour
                                                </span>
                                            </div>
                                            <div class="mt-2">
                                                @if (v.Vehicule_Data.Disponibilite)
                                                {
                                                    <span class="badge bg-success">Disponible</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Indisponible</span>
                                                }
                                            </div>
                                        </div>
                                        <div class="result-card-footer">
                                            <a asp-page="/Vehicules/Details"
                                               asp-route-id="@v.Vehicule_Data.Id"
                                               class="main-btn success-btn-outline btn-sm w-100">
                                                <i class="lni lni-eye me-2"></i> Voir détails
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                        <!-- ================= RESERVATIONS ================= -->
                        @if (Model.Reservations.Any())
                        {
                            <div class="col-12 mt-4">
                                <div class="section-header d-flex align-items-center mb-3">
                                    <div class="section-icon bg-warning">
                                        <i class="lni lni-calendar text-white"></i>
                                    </div>
                                    <h5 class="section-title mb-0">
                                        Réservations <span class="badge bg-warning ms-2">@Model.Reservations.Count()</span>
                                    </h5>
                                </div>
                            </div>

                            @foreach (var r in Model.Reservations)
                            {
                                <div class="col-md-6 col-lg-4">
                                    <div class="result-card">
                                        <div class="result-card-header">
                                            <div class="result-icon bg-warning-light">
                                                <i class="lni lni-calendar"></i>
                                            </div>
                                            <div class="result-info">
                                                <h6 class="result-title">
                                                    Réservation #@r.Id
                                                </h6>
                                                <p class="result-subtitle">
                                                    @r.ClientNom @r.ClientPrenom
                                                </p>
                                            </div>
                                        </div>
                                        <div class="result-card-body">
                                            <div class="result-meta">
                                                <span class="meta-item">
                                                    <i class="lni lni-calendar me-1"></i> Du @r.DateDebut.ToShortDateString()
                                                </span>
                                                <span class="meta-item">
                                                    <i class="lni lni-calendar me-1"></i> Au @r.DateFin.ToShortDateString()
                                                </span>
                                            </div>
                                            <div class="mt-2">
                                                <span class="badge @(r.Status == "Confirmée" ? "bg-success" :
                                                                                                                         r.Status == "En cours" ? "bg-primary" :
                                                                                                                         r.Status == "Terminée" ? "bg-secondary" : "bg-warning")">
                                                    @r.Status
                                                </span>
                                            </div>
                                        </div>
                                        <div class="result-card-footer">
                                            <a asp-page="/Reservations/Details"
                                               asp-route-id="@r.Id"
                                               class="main-btn warning-btn-outline btn-sm w-100">
                                                <i class="lni lni-eye me-2"></i> Voir détails
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                        <!-- ================= CATEGORIES ================= -->
                        @if (Model.Categories.Any())
                        {
                            <div class="col-12 mt-4">
                                <div class="section-header d-flex align-items-center mb-3">
                                    <div class="section-icon bg-info">
                                        <i class="lni lni-tag text-white"></i>
                                    </div>
                                    <h5 class="section-title mb-0">
                                        Catégories <span class="badge bg-info ms-2">@Model.Categories.Count()</span>
                                    </h5>
                                </div>
                            </div>

                            @foreach (var cat in Model.Categories)
                            {
                                <div class="col-md-6 col-lg-4">
                                    <div class="result-card">
                                        <div class="result-card-header">
                                            <div class="result-icon bg-info-light">
                                                <i class="lni lni-tag"></i>
                                            </div>
                                            <div class="result-info">
                                                <h6 class="result-title">
                                                    @cat.Nom
                                                </h6>
                                                @if (!string.IsNullOrWhiteSpace(cat.Description))
                                                {
                                                    <p class="result-subtitle">
                                                        @cat.Description
                                                    </p>
                                                }
                                            </div>
                                        </div>
                                        <div class="result-card-footer">
                                            <a asp-page="/Categories/Details"
                                               asp-route-id="@cat.Id"
                                               class="main-btn info-btn-outline btn-sm w-100">
                                                <i class="lni lni-eye me-2"></i> Voir détails
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                        <!-- ================= AUCUN RESULTAT ================= -->
                        @if (!Model.Clients.Any()
                                                && !Model.Vehicules.Any()
                                                && !Model.Reservations.Any()
                                                && !Model.Categories.Any()
                                                && !string.IsNullOrWhiteSpace(Request.Query["q"]))
                        {
                            <div class="col-12">
                                <div class="empty-state text-center py-5">
                                    <div class="empty-state-icon">
                                        <i class="lni lni-search-alt" style="font-size: 64px; color: #dee2e6;"></i>
                                    </div>
                                    <h5 class="mt-3">Aucun résultat trouvé</h5>
                                    <p class="text-muted">
                                        Aucun élément ne correspond à votre recherche "<strong>@Request.Query["q"]</strong>"
                                    </p>
                                    <a href="/Search" class="main-btn light-btn mt-3">
                                        <i class="lni lni-close me-2"></i> Effacer la recherche
                                    </a>
                                </div>
                            </div>
                        }

                        @if (string.IsNullOrWhiteSpace(Request.Query["q"]))
                        {
                            <div class="col-12">
                                <div class="empty-state text-center py-5">
                                    <div class="empty-state-icon">
                                        <i class="lni lni-search" style="font-size: 64px; color: #dee2e6;"></i>
                                    </div>
                                    <h5 class="mt-3">Effectuez une recherche</h5>
                                    <p class="text-muted">
                                        Utilisez la barre de recherche pour trouver des clients, véhicules, réservations...
                                    </p>
                                </div>
                            </div>
                        }

                    </div>
                    <!-- end row -->
                </div>
            </div>
            <!-- end card -->
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Gestion des filtres actifs
            const filterButtons = document.querySelectorAll('.filter-btn');
            const currentUrl = window.location.pathname;

            filterButtons.forEach(btn => {
                if (btn.tagName === 'A') {
                    if (btn.getAttribute('href') === currentUrl) {
                        btn.classList.add('active');
                    }
                }
            });
        });
    </script>
}

