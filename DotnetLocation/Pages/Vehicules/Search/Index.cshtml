@page
@model DotnetLocation.Pages.Vehicules.Search.IndexModel
@{
    ViewData["Title"] = "Recherche Véhicules";
}

<div class="title-wrapper pt-30">
    <div class="row align-items-center">
        <div class="col-md-6">
            <div class="title">
                <h2>Recherche Véhicules</h2>
            </div>
        </div>
        <!-- end col -->
        <div class="col-md-6">
            <div class="breadcrumb-wrapper">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/">
                                Tableau de bord
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-page="/Vehicules/Index">
                                Véhicules
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Recherche
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->
</div>
<!-- ========== title-wrapper end ========== -->

<div class="tables-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="card-style mb-30">
                <div class="card-header">
                    <h6 class="mb-1">Recherche de véhicules</h6>
                    <p class="text-sm mb-0">
                        Recherchez des véhicules par marque, modèle, catégorie...
                    </p>
                </div>

                <div class="card-body">
                    <!-- Formulaire de recherche avec filtre catégorie -->
                    <form method="get" class="search-form mb-4">
                        <div class="row g-3">
                            <div class="col-md-5">
                                <label class="form-label fw-500 text-muted mb-1">
                                    <i class="lni lni-search me-1"></i> Recherche
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0">
                                        <i class="lni lni-search-alt text-muted"></i>
                                    </span>
                                    <input type="text"
                                           name="SearchTerm"
                                           value="@Model.SearchTerm"
                                           class="form-control border-start-0"
                                           placeholder="Marque, modèle, transmission, carburant..." />
                                </div>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label fw-500 text-muted mb-1">
                                    <i class="lni lni-tag me-1"></i> Catégorie
                                </label>
                                <select name="CategorieId" class="form-select">
                                    <option value="">Toutes les catégories</option>
                                    @foreach (var cat in Model.Categories)
                                    {
                                        <option value="@cat.Id" selected="@(cat.Id == Model.CategorieId)">
                                            @cat.Nom
                                        </option>
                                    }
                                </select>
                            </div>

                            <div class="col-md-3 d-flex align-items-end">
                                <button type="submit" class="main-btn primary-btn w-100">
                                    <i class="lni lni-search me-2"></i> Rechercher
                                </button>
                            </div>
                        </div>
                    </form>

                    @if (!string.IsNullOrWhiteSpace(Model.SearchTerm) || Model.CategorieId.HasValue)
                    {
                        <!-- Résumé de la recherche -->
                        <div class="results-summary mb-4">
                            <div class="alert alert-light border-0 bg-light d-flex align-items-center">
                                <i class="lni lni-stats-up me-3 text-primary" style="font-size: 1.5rem;"></i>
                                <div>
                                    <strong>@Model.TotalResults</strong> véhicule(s) trouvé(s)
                                    @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
                                    {
                                        <span>pour "<strong>@Model.SearchTerm</strong>"</span>
                                    }
                                    @if (Model.CategorieId.HasValue)
                                    {
                                        var categorie = Model.Categories.FirstOrDefault(c => c.Id == Model.CategorieId);
                                        if (categorie != null)
                                        {
                                            <span>dans la catégorie <strong>@categorie.Nom</strong></span>
                                        }
                                    }
                                </div>
                                <a href="?SearchTerm=&CategorieId=" class="ms-auto text-decoration-none">
                                    <i class="lni lni-close"></i> Effacer
                                </a>
                            </div>
                        </div>
                    }

                    <!-- Table de résultats -->
                    <div class="table-wrapper table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th class="text-center" style="width: 60px;">ID</th>
                                    <th>Marque</th>
                                    <th>Modèle</th>
                                    <th>Catégorie</th>
                                    <th>Transmission</th>
                                    <th>Carburant</th>
                                    <th class="text-end">Prix</th>
                                    <th class="text-center">Disponibilité</th>
                                    <th class="text-center" style="width: 100px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var v in Model.Vehicules)
                                {
                                    <tr>
                                        <td class="text-center">
                                            <span class="badge bg-light text-dark">#@v.Vehicule_Data.Id</span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="vehicle-avatar bg-success-light me-2">
                                                    <i class="lni lni-car"></i>
                                                </div>
                                                <strong>@v.Vehicule_Data.Marque</strong>
                                            </div>
                                        </td>
                                        <td>@v.Vehicule_Data.Model</td>
                                        <td>
                                            <span>@v.Vehicule_Data.CategorieNom</span>
                                        </td>
                                        <td>
                                            @if (v.Vehicule_Data.Transmission == "Automatique")
                                            {
                                                <span class="badge bg-primary">Automatique</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Manuelle</span>
                                            }
                                        </td>
                                        <td>
                                            @switch (v.Vehicule_Data.Carburant?.ToLower())
                                            {
                                                case "essence":
                                                    <span class="badge bg-warning">Essence</span>
                                                    break;
                                                case "diesel":
                                                    <span class="badge bg-dark">Diesel</span>
                                                    break;
                                                case "electrique":
                                                    <span class="badge bg-success">Électrique</span>
                                                    break;
                                                case "hybride":
                                                    <span class="badge bg-info">Hybride</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">@v.Vehicule_Data.Carburant</span>
                                                    break;
                                            }
                                        </td>
                                        <td class="text-end">
                                            <strong class="text-primary">@v.Vehicule_Data.Prix.ToString("N0")</strong> <small>Ar</small>
                                        </td>
                                        <td class="text-center">
                                            @if (v.Vehicule_Data.Disponibilite)
                                            {
                                                <span class="badge bg-success">Disponible</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">Indisponible</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="action-buttons">
                                                <a asp-page="/Vehicules/Details"
                                                   asp-route-id="@v.Vehicule_Data.Id"
                                                   class="action-btn view-btn"
                                                   title="Voir détails">
                                                    <i class="lni lni-eye"></i>
                                                </a>
                                                <a asp-page="/Vehicules/Edit"
                                                   asp-route-id="@v.Vehicule_Data.Id"
                                                   class="action-btn edit-btn"
                                                   title="Modifier">
                                                    <i class="lni lni-pencil"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                                @if (!Model.Vehicules.Any())
                                {
                                    <tr>
                                        <td colspan="9" class="text-center py-5">
                                            <div class="empty-state">
                                                <div class="empty-state-icon">
                                                    <i class="lni lni-car"></i>
                                                </div>
                                                <h6 class="mt-3">Aucun véhicule trouvé</h6>
                                                <p class="text-muted">
                                                    Aucun véhicule ne correspond à vos critères de recherche
                                                </p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (Model.TotalResults > 0)
                    {
                        var totalPages = (int)Math.Ceiling((double)Model.TotalResults / Model.PageSize);

                        <div class="pagination-wrapper mt-4 d-flex justify-content-between align-items-center">
                            <div class="pagination-info text-muted">
                                Page @Model.PageNumber sur @totalPages
                                (@(((Model.PageNumber - 1) * Model.PageSize) + 1) -
                                @Math.Min(Model.PageNumber * Model.PageSize, Model.TotalResults)
                                sur @Model.TotalResults véhicules)
                            </div>

                            <nav aria-label="Navigation des pages">
                                <ul class="pagination">
                                    <!-- Bouton Précédent -->
                                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                                        <a class="page-link"
                                           href="?SearchTerm=@Model.SearchTerm&CategorieId=@Model.CategorieId&Page=@(Model.PageNumber - 1)"
                                           aria-label="Précédent">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>

                                    <!-- Pages -->
                                    @{
                                        var startPage = Math.Max(1, Model.PageNumber - 2);
                                        var endPage = Math.Min(totalPages, startPage + 4);
                                        startPage = Math.Max(1, endPage - 4);
                                    }

                                    @if (startPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link"
                                               href="?SearchTerm=@Model.SearchTerm&CategorieId=@Model.CategorieId&Page=1">1</a>
                                        </li>
                                        @if (startPage > 2)
                                        {
                                            <li class="page-item disabled">
                                                <span class="page-link">...</span>
                                            </li>
                                        }
                                    }

                                    @for (int i = startPage; i <= endPage; i++)
                                    {
                                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                            <a class="page-link"
                                               href="?SearchTerm=@Model.SearchTerm&CategorieId=@Model.CategorieId&Page=@i">@i</a>
                                        </li>
                                    }

                                    @if (endPage < totalPages)
                                    {
                                        @if (endPage < totalPages - 1)
                                        {
                                            <li class="page-item disabled">
                                                <span class="page-link">...</span>
                                            </li>
                                        }
                                        <li class="page-item">
                                            <a class="page-link"
                                               href="?SearchTerm=@Model.SearchTerm&CategorieId=@Model.CategorieId&Page=@totalPages">@totalPages</a>
                                        </li>
                                    }

                                    <!-- Bouton Suivant -->
                                    <li class="page-item @(Model.PageNumber == totalPages ? "disabled" : "")">
                                        <a class="page-link"
                                           href="?SearchTerm=@Model.SearchTerm&CategorieId=@Model.CategorieId&Page=@(Model.PageNumber + 1)"
                                           aria-label="Suivant">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    }
                </div>
            </div>
            <!-- end card -->
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-submit après changement de catégorie (optionnel)
            const categorieSelect = document.querySelector('select[name="CategorieId"]');
            const searchForm = document.querySelector('.search-form');

            if (categorieSelect && searchForm) {
                categorieSelect.addEventListener('change', () => {
                    searchForm.submit();
                });
            }

            // Délai pour la recherche textuelle
            const searchInput = document.querySelector('input[name="SearchTerm"]');
            if (searchInput && searchForm) {
                let timeout = null;
                searchInput.addEventListener('keyup', function(e) {
                    clearTimeout(timeout);
                    timeout = setTimeout(() => {
                        if (this.value.length >= 2 || this.value.length === 0) {
                            searchForm.submit();
                        }
                    }, 500);
                });
            }
        });
    </script>
}

