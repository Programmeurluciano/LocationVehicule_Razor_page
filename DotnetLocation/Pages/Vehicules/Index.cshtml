@page
@model DotnetLocation.Pages.Vehicules.IndexModel

@{
    ViewData["Title"] = "Gestion des Véhicules";
}

<div class="title-wrapper pt-30">
    <div class="row align-items-center">
        <div class="col-md-6">
            <div class="title">
                <h2>Gestion des Véhicules</h2>
            </div>
        </div>
        <!-- end col -->
        <div class="col-md-6">
            <div class="breadcrumb-wrapper">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Véhicules
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->
</div>
<!-- ========== title-wrapper end ========== -->
<!-- ========== tables-wrapper start ========== -->
<div class="tables-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="card-style mb-30">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="mb-0">Liste des Véhicules</h6>
                    <a asp-page="Create" class="main-btn primary-btn btn-hover">
                        <i class="lni lni-plus me-2"></i> Nouveau Véhicule
                    </a>
                </div>
                <p class="text-sm mb-20">
                    Gérez votre parc automobile. Ajoutez, modifiez ou supprimez des véhicules selon vos besoins.
                </p>

                <div class="table-wrapper table-responsive">
                    <table class="table striped-table">
                        <thead>
                            <tr>
                                <th class="min-width">
                                    <h6>Catégorie</h6>
                                </th>
                                <th class="min-width">
                                    <h6>Marque</h6>
                                </th>
                                <th class="min-width">
                                    <h6>Modèle</h6>
                                </th>
                                <th class="min-width">
                                    <h6>Année</h6>
                                </th>
                                <th class="min-width">
                                    <h6>Transmission</h6>
                                </th>
                                <th class="min-width">
                                    <h6>Carburant</h6>
                                </th>
                                <th class="min-width">
                                    <h6>Disponibilité</h6>
                                </th>
                                <th class="text-center min-width">
                                    <h6>Actions</h6>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Vehicule != null && Model.Vehicule.Any())
                            {
                                @foreach (var item in Model.Vehicule)
                                {
                                    <tr>
                                        <td class="min-width">
                                            <p>
                                                @Html.DisplayFor(modelItem => item.Categorie.Nom)
                                            </p>
                                        </td>
                                        <td class="min-width">
                                            <div class="lead">
                                                <p class="mb-0">@Html.DisplayFor(modelItem => item.Marque)</p>
                                            </div>
                                        </td>
                                        <td class="min-width">
                                            <p>@Html.DisplayFor(modelItem => item.Model)</p>
                                        </td>
                                        <td class="min-width">
                                            <span>@Html.DisplayFor(modelItem => item.Annee)</span>
                                        </td>
                                        <td class="min-width">
                                            <span class="badge bg-light text-dark">@Html.DisplayFor(modelItem => item.Transmission)</span>
                                        </td>
                                        <td class="min-width">
                                            <span class="badge bg-warning">@Html.DisplayFor(modelItem => item.Carburant)</span>
                                        </td>
                                        <td class="min-width">
                                            @if (item.Disponibilite)
                                            {
                                                <span class="status-btn success-btn">Disponible</span>
                                            }
                                            else
                                            {
                                                <span class="status-btn close-btn">Indisponible</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="action d-flex justify-content-center">
                                                <a asp-page="./Edit" asp-route-id="@item.Id" class="text-primary me-3" title="Modifier">
                                                    <i class="lni lni-pencil"></i>
                                                </a>
                                                <a asp-page="./Details" asp-route-id="@item.Id" class="text-info me-3" title="Détails">
                                                    <i class="lni lni-eye"></i>
                                                </a>
                                                <a asp-page="./Delete" asp-route-id="@item.Id" class="text-danger" title="Supprimer">
                                                    <i class="lni lni-trash-can"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center py-4">
                                        <div class="empty-state">
                                            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="mb-3">
                                                <path d="M18.92 6.01C18.72 5.42 18.16 5 17.5 5H6.5C5.84 5 5.29 5.42 5.08 6.01L3 12v8c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-1h12v1c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-8l-2.08-5.99zM6.5 16c-.83 0-1.5-.67-1.5-1.5S5.67 13 6.5 13s1.5.67 1.5 1.5S7.33 16 6.5 16zm11 0c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zM5 11l1.5-4.5h11L19 11H5z" fill="#e0e0e0" />
                                            </svg>
                                            <h6 class="text-muted">Aucun véhicule trouvé</h6>
                                            <p class="text-sm text-muted">Commencez par ajouter votre premier véhicule</p>
                                            <a asp-page="Create" class="main-btn primary-btn btn-hover mt-3">
                                                <i class="lni lni-plus me-2"></i> Ajouter un véhicule
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.Vehicule != null && Model.Vehicule.Count() > 10)
                {
                    <div class="pagination-wrapper mt-4">
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                        <i class="lni lni-chevron-left"></i>
                                    </a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">
                                        <i class="lni lni-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
            </div>
            <!-- end card -->
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->
</div>

<style>
    .filter-card {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        border: 1px solid #e9ecef;
    }

    .stat-card {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .stat-icon {
        width: 50px;
        height: 50px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 24px;
    }

    .stat-number {
        font-size: 24px;
        font-weight: 600;
        margin: 0;
        line-height: 1;
    }

    .stat-label {
        font-size: 14px;
        color: #6c757d;
        margin: 5px 0 0 0;
    }

    .lead {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .lead-image {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f0f5ff;
        border-radius: 8px;
    }

    .lead-text p {
        margin: 0;
        font-weight: 500;
    }

    .badge {
        padding: 4px 8px;
        font-size: 12px;
        font-weight: 500;
    }
</style>

